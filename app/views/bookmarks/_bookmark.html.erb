<div class="bookmark-item border-bottom py-3">
  <div class="d-flex justify-content-between align-items-start">
    <div class="bookmark-content">
      <h3 class="h6 mb-1">
        <%= link_to bookmark.title, bookmark.url, 
            target: "_blank", 
            rel: "noopener", 
            class: "text-decoration-none" %>
      </h3>
      <p class="text-muted small mb-1">
        <%= bookmark.url %>
      </p>
      <% if bookmark.description.present? %>
        <p class="small mb-1"><%= bookmark.description %></p>
      <% end %>
      <div class="tags">
        <%# タグ機能は後で実装 %>
      </div>
    </div>
    
    <div class="bookmark-actions">
      <div class="btn-group btn-group-sm">
        <%= link_to edit_bookmark_path(bookmark), 
            class: "btn btn-outline-secondary",
            title: "編集" do %>
          <i class="bi bi-pencil"></i>
        <% end %>
        <%= button_to bookmark_path(bookmark), 
            method: :delete,
            class: "btn btn-outline-danger",
            form: { data: { turbo_confirm: "このブックマークを削除してもよろしいですか？" } },
            title: "削除" do %>
          <i class="bi bi-trash"></i>
        <% end %>
      </div>
    </div>
  </div>
</div> 