<%= form_with url: bookmarks_path, method: :get, class: "mb-3" do |f| %>
  <div class="input-group">
    <%= f.text_field :query, 
        class: "form-control form-control-sm",
        placeholder: "タイトルまたは説明で検索",
        value: params[:query] %>
    <%= f.submit "検索", class: "btn btn-outline-secondary btn-sm" %>
  </div>
<% end %> 