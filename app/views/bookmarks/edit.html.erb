<div class="container py-4">
  <div class="card">
    <div class="card-header">
      <h1 class="card-title h4 mb-0">ブックマークの編集</h1>
    </div>

    <div class="card-body">
      <%= form_with(model: @bookmark, local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :url, "URL", class: "form-label" %>
          <%= f.url_field :url, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :title, "タイトル", class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-4">
          <%= f.label :tag_list, "タグ（カンマ区切り）", class: "form-label" %>
          <%= f.text_field :tag_list, class: "form-control" %>
        </div>

        <div class="text-end">
          <%= link_to "キャンセル", bookmarks_path, class: "btn btn-outline-secondary me-2" %>
          <%= f.submit "更新", class: "btn btn-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
