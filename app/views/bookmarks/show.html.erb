<div class="container py-4">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title h4"><%= @bookmark.title %></h1>
      
      <p class="card-text">
        <strong>URL:</strong>
        <%= link_to @bookmark.url, @bookmark.url, target: "_blank", rel: "noopener noreferrer" %>
      </p>

      <% if @bookmark.description.present? %>
        <p class="card-text">
          <strong>説明:</strong>
          <%= @bookmark.description %>
        </p>
      <% end %>

      <div class="mt-3">
        <%= link_to "編集", edit_bookmark_path(@bookmark), class: "btn btn-primary" %>
        <%= link_to "戻る", bookmarks_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
