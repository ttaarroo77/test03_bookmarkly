<div class="d-flex align-items-center justify-content-center min-vh-100">
  <div class="card shadow-sm" style="width: 24rem;">
    <div class="card-body p-4">
      <h1 class="text-center h3 mb-4">Bookmarkly</h1>

      <% if user_signed_in? %>
        <div class="d-grid gap-2">
          <%= link_to "ブックマーク一覧", bookmarks_path, class: "btn btn-dark w-100 mb-3" %>
        </div>
      <% else %>
        <h2 class="text-center h5 mb-4">ログイン</h2>
        
        <%= form_with(url: user_session_path) do |f| %>
          <div class="mb-3">
            <%= f.label :email, "メールアドレス", class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "your@email.com" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "パスワード", class: "form-label" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>

          <div class="d-grid gap-2">
            <%= f.submit "ログイン", class: "btn btn-dark w-100" %>
          </div>

          <div class="d-flex justify-content-between mt-3">
            <%= link_to "新規登録", new_user_registration_path, class: "text-decoration-none text-secondary" %>
            <%= link_to "パスワードを忘れた場合", new_user_password_path, class: "text-decoration-none text-secondary" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
