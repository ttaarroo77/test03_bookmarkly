<div class="container py-4">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2 class="card-title h5 mb-0">マイブックマーク</h2>
        </div>
        <div class="card-body">
          <% if @bookmarks.any? %>
            <%= render @bookmarks %>
          <% else %>
            <p class="text-muted mb-0">ブックマークはまだありません</p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title h5 mb-0">プロフィール</h3>
        </div>
        <div class="card-body">
          <p class="mb-1"><strong>メールアドレス:</strong></p>
          <p class="text-muted"><%= @user.email %></p>
          <%= link_to "編集", edit_profile_path, class: "btn btn-outline-primary btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</div> 